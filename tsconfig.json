{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // Set to true to prevent generating JavaScript files during compilation
    "declaration": true, // Generate type declaration files (.d.ts)
    "declarationDir": "./types", // Specify the directory for generated type declaration files
    "sourceMap": true, // Generate source maps for debugging
    "allowSyntheticDefaultImports": true // Allow imports with default exports from modules with no default export
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // Include source files for compilation
  "exclude": ["node_modules"] // Exclude node_modules directory from compilation
}
